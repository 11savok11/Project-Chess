using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApp1
{
    public partial class Mathes : Form
    {
        public Mathes()
        {
            InitializeComponent();
        }

        private void Mathes_Load(object sender, EventArgs e)
        {
            // TODO: данная строка кода позволяет загрузить данные в таблицу "chessDataSet3.Данные_О_Матчах". При необходимости она может быть перемещена или удалена.
            this.данные_О_МатчахTableAdapter.Fill(this.chessDataSet3.Данные_О_Матчах);

        }

        private void button2_Click(object sender, EventArgs e)
        {
            Admin af = new Admin();
            af.Owner = this;
            af.Show();
        }
        private void dataGridView1_UserDeletingRow(object sender, DataGridViewRowCancelEventArgs e)
        {
            DialogResult dr = MessageBox.Show("Удалить запись?", "Удаление", MessageBoxButtons.OKCancel, MessageBoxIcon.Warning, MessageBoxDefaultButton.Button2);
            if (dr == DialogResult.Cancel)
            {
                e.Cancel = true;
            }
        }

        private void button1_Click(object sender, EventArgs e)
        {
            данные_О_МатчахTableAdapter.Update(chessDataSet3);
        }

        private void ButLog_Click(object sender, EventArgs e)
        {
            SeachMath af = new SeachMath();
            af.Owner = this;
            af.Show();
        }

        private void ButReg_Click(object sender, EventArgs e)
        {
            AddMath af = new AddMath();
            af.Owner = this;
            af.Show();
        }
    }
}

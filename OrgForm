            InitializeComponent();
        }

        private void OrgForm_Load(object sender, EventArgs e)
        {
            this.шахматыНаРегTableAdapter.Fill(this.savDataSet2.ШахматыНаРег);
        }

        private void button2_Click(object sender, EventArgs e)

using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using static System.Windows.Forms.VisualStyles.VisualStyleElement;

namespace WindowsFormsApp1
{
    public partial class Register : Form
    {
        public Register()
        {
            InitializeComponent();
        }

        private void Register_Load(object sender, EventArgs e)
        {

        }

        private void button2_Click(object sender, EventArgs e)
        {
            if (tbPassword.Text != tbReloadPas.Text)
            {
                MessageBox.Show("Пароли не совпадают. Пожалуйста, попробуйте снова.");
                return;
            }
            if (!IsValidPassword(tbPassword.Text))
            {
                MessageBox.Show("Пароль содержит недопустимые символы. Пожалуйста, используйте только буквы и цифры.");
                return;
            }
            DataRow nRow = savAccountDataSet.Аккаунты.NewRow();
            nRow[1] = tbUserName.Text;
            nRow[2] = tbPassword.Text;
            savAccountDataSet.Аккаунты.Rows.Add(nRow);
            аккаунтыBindingSource.ResetBindings(false);
            Validate();
            аккаунтыBindingSource.EndEdit();
            аккаунтыTableAdapter.Update(savAccountDataSet.Аккаунты);

            MessageBox.Show("Регистрация Успешна!");
        }
        private bool IsValidPassword(string password)
        {
            foreach (char c in password)
            {
                if (!char.IsLetterOrDigit(c))
                {
                    return false;
                }
            }
            return true;
        }

        private void tbPassword_TextChanged(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            Close();
        }
    }
}

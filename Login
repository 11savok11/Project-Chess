using System;
using System.Data;
using System.Data.OleDb;
using System.Windows.Forms;
using WindowsFormsApp1;

namespace Login
{
    public partial class Login : Form
    {
        private const string ConnectionString = "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=sav.accdb;";

        public Login()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            Close();
        }

        private void button2_Click(object sender, EventArgs e)
        {
            string loginuser = tbUserName.Text;
            string password = tbPassword.Text;

            DataTable table = new DataTable();

            using (OleDbConnection connection = new OleDbConnection(ConnectionString))
            {
                string query = "SELECT * FROM [авторизация] WHERE [Логин] = @ul AND [Пароль] = @up";
                using (OleDbCommand command = new OleDbCommand(query, connection))
                {
                    command.Parameters.AddWithValue("@ul", loginuser);
                    command.Parameters.AddWithValue("@up", password);

                    OleDbDataAdapter adapter = new OleDbDataAdapter(command);
                    adapter.Fill(table);
                }
            }

            if (table.Rows.Count > 0)
            {
                string userRole = table.Rows[0]["Роль"].ToString().Trim();

                switch (userRole.ToLower())
                {
                    case "админ":
                        Admin adminForm = new Admin();
                        adminForm.Owner = this;
                        adminForm.Show();
                        this.Hide();
                        break;
                }

                MessageBox.Show("Добро Пожаловать.");
            }
            else
            {
                MessageBox.Show("Ошибка при вводе данных аккаунта или нет доступа.");
            }
        }

        private void button1_Click_1(object sender, EventArgs e)
        {

        }

        private void Login_Load(object sender, EventArgs e)
        {

        }
    }
}
